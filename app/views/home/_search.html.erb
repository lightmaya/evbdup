<div class="filter">

  <!-- 已选条件 -->
  <% if @qs.present? %>
    <div class="filterminlist">
      <div class="filtername tr">已选条件：</div>
      <div class="a-values">
        <ul class="f-list">
          <% @qs.each do |h| %>
            <%# h[:title] = h[:title] + image_tag("dota/close_06.gif") %>
            <li><%= link_to_channel h, {del: true} %></li>
          <% end -%>
        </ul>
      </div>
      <div class="v-option">
        <%= link_to "全部撤消", channel_path(@category.id) %>   
      </div>
      <div style="clear:both"></div>
    </div>
  <% end-%>
  <!-- 已选条件END -->

  <!-- 品牌筛选 -->
  <% if @brands.present? %>
    <div class="filterminlist">
      <div class="filtername tr" style="border: 0px">品牌：</div>
      <dl>
        <% @brands.each do |brand_hash| %>
          <dd class="w120">
            <%= link_to_channel brand_hash %>
          </dd> 
        <% end -%>
      </dl>
      <div style="clear:both"></div>
    </div>
  <% end -%>
  <!-- 品牌筛选END -->

  <!-- 关键参数 -->
  <% if @key_params.present? %>
    <% @key_params.each do |h| %>
      <div class="filterminlist">
        <div class="filtername tr" style="border: 0px"><%= h["name"] %>：</div>
        <dl>
          <% h["data"].each do |key_hash| %>
            <dd class="w120">
              <%= link_to_channel key_hash %>
            </dd> 
          <% end -%>
        </dl>
        <div style="clear:both"></div>
      </div>
    <% end -%>
  <% end -%>
  <!-- 关键参数END -->
</div>

<style type="text/css">
  ul.f-list {
    list-style: none;
  }
  .filter {
    clear: both;
    padding-top:5px;
    margin-left: 13px;
    margin-right: 13px;
  }
  .filterminlist dl{
    margin-bottom: 0px;
  }
  .filterminlist {
    padding:5px 0;
    border-top:1px solid #e8e8e8;
  }
.btnone {
  border-bottom:none;
}
.filtername {
  width: 90px;
  float:left;
  line-height: 40px;
  color:#000;
}
.a-values {
  float:left;
}
.a-values ul {
  padding-top:8px;
}
.a-values ul li {
  float:left;
  margin-right:10px;
  color:#000;
  // padding:2px 20px 2px 5px;
  // background:url(/assets/zcl/icon_1.png) no-repeat right -140px;
  padding:2px 5px 2px 5px;
  border:1px solid #d72727;
  cursor:pointer;
}
.a-values ul li:hover {
  border:1px solid #d72727;
}
.a-values ul li span {
  color:#007b36;
}
.v-option {
  width:80px;
  float:right;
  line-height:40px;
  text-align:right;
}
.v-option .more {
  display:inline-block;
  line-height:20px;
  height:20px;
  width:50px;
  background:url(/assets/zcl/icon_1.png) no-repeat 8px 8px;
  cursor:pointer;
  margin-top:10px;
}
.v-option .more:hover {
  background:url(/assets/zcl/icon_1.png) no-repeat 8px -9px;
  color:#007b36;
}
.filter .alling {
  float:left;
  padding:0;
  width:50px;
  margin-top:12px;      
}
.filter .alling a {
  float:left;
  background-color:#018b3e;
  padding:0 5px;
  color:#ffffff;
  text-decoration:none;         
}
.filter dl {
  display:block;
  float:left;
  /*width:720px;  */
  width: 85%;
  margin-left: 40px;
}
.filter dd {
  display:inline-block;
  float:left;
  width:auto;
  height:40px;
  line-height:40px;
  width:120px;              
}
.filter dt {
  height:14px;
  font-weight:bold;
  color:#333333;          
}
.filter dd {
  color:#007b36;
}
.filter dd a{
  color:#007b36;
}
.filter a {
  cursor:pointer;
}
</style>
