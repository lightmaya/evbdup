    <div class="panel panel-sea margin-bottom-40">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-gear"></i>供应商明细统计</h3>
        </div>
        <div class="panel-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th width="10%">序号</th>
                    <th>供应商名称</th>
                    <th>金额</th>
                </tr>
            </thead>
            <tbody>
                <% @dep_infos.present? && @dep_infos.each_with_index do |dep_info,index|%>
                <tr>
                    <td align="center"><%=show_index(index)%></td>
                    <td align="center"><%= dep_info[0] %></td>
                    <td class="money"><%=money dep_info[1]%></td>
                </tr>
                <%end%>
            </tbody>
        </table>
    </div>                  
</div>
