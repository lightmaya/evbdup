<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->  
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->  
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]-->  
<head>
    <title><%= Dictionary.web_site_name %></title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="zcl">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">

    <!-- Favicon -->
    <!-- <link rel="shortcut icon" href="favicon.ico"> -->

    <!-- CSS Global Compulsory -->
    <%= stylesheet_link_tag "kobe" %>
    <%= javascript_include_tag "application" %>

</head> 

<body>
    <!--=== Style Switcher ===-->    
    <i class="style-switcher-btn fa fa-question hidden-xs" data-toggle="modal" data-target="#suggestion"></i>
    <%#= modal_dialog('suggestion', _create_xml_form(Suggestion.xml,Suggestion.new,{"upload_files" => true,"grid"=>1,"form_id"=>"suggestion_form","action"=>kobe_suggestions_path}), raw('<i class="fa fa-question-circle"></i> 问题或意见建议')) %>
    <%= modal_dialog('suggestion', draw_myform(@suggestion_form), raw('<i class="fa fa-question-circle"></i> 问题或意见建议')) %>
    <!--/style-switcher-->
    <!--=== End Style Switcher ===-->    

    <div class="wrapper">
        <!--=== Header ===-->    
        <%= render :partial => '/shared/layout/kobe_header' %>
        <!--=== End Header ===-->     

        <!--=== Breadcrumbs ===-->
        <div class="breadcrumbs">
            <div class="container">
                <h1 class="pull-left"> 查看单位信息</h1>
                <ul class="pull-right breadcrumb">
                    <li><a href="index-2.html">首页</a></li>
                    <li><a href="#">单位及人员管理</a></li>
                    <li class="active">单位管理</li>
                </ul>
            </div>
        </div><!--/breadcrumbs-->
        <!--=== End Breadcrumbs ===-->

        <!--=== Content Part ===-->
        <div class="container content">
            <div class="row">
                <!-- Begin Content -->
                <div class="col-md-12" style="min-height:400px;">
                    <%= yield %>
                </div>
                <!-- End Content -->
            </div>          
        </div><!--/container-->     
        <!--=== End Content Part ===-->

        <!--=== Copyright ===-->
        <%= render :partial => '/shared/layout/kobe_footer' %>
        <!--=== End Copyright ===-->
    </div><!--/End Wrapepr-->

<!--[if lt IE 9]>
    <%= javascript_include_tag "ie_9" %>
    <![endif]-->
    <%= javascript_include_tag "kobe" %>
    <%= render :partial => '/shared/myform/fileupload_layout' %>
    <%= render partial: '/shared/dialog/art_dialog' %>
</body>
</html>