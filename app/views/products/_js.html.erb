<script type="text/javascript">
  $(function(){
    // 锚点
    var thisId = window.location.hash;
    if (thisId != ''){
      $(thisId).click();
    }

    // change_cart_path(@product.id, agent_id: agent.id, num:)

    $("#xzgys").click(function(){
      $("a[href='#gysxx']").click(); //.focus();
      // $("#gyslb_div").focus();

      setTimeout('$("html,body").animate({scrollTop:$("#gysxx").offset().top},1000);', 300)
    });

  });

  function add_to_cart(seller_id){
    // 根据项目和入围供应商的级别判断是否可以加入购物车
    if(!$.parseJSON($("#can_cart").val())){
      flash_dialog("该产品的供应商不是A级供应商，请从A级供应商处采购或者通过协议议价的方式进行采购！");
      return false;
    }
    var num = parseInt($("#qty").val());
    if ($.isBlank(num) || num < 1){
      num = 1
    }
    if ((num + 1) > 9999){
      num = 9999;
    }

    var url = "/cart/change/" + $("#product_id").val() + "-Department-" + seller_id + "?num=" + num;
    window.location.href = url;
  }
</script>
