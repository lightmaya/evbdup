<script type="text/javascript">
  $(function(){
    // 锚点
    var thisId = window.location.hash;
    if (thisId != ''){
      $(thisId).click();
    }


    $("#xzgys").click(function(){
      $("a[href='#gysxx']").click(); //.focus();
      // $("#gyslb_div").focus();

      setTimeout('$("html,body").animate({scrollTop:$("#gysxx").offset().top},1000);', 300)
    });

    $.ajax({
      type: "get",
      dataType: "json",
      url: "/check_login",
      data: "pids=" + $("#product_id").val(),
      success: function(data) {
        if(data.success){
          $.each(data.rs, function(i, d){
            $("#bid_price_li").html(d.bid_price).show();
            $("#market_price_li").html(d.market_price).show();
          });
        }else{
          $("#login_tip").show();
        }
      }
    })

  });

  function add_to_cart(agent_id){
    var url = "/cart/change/" + $("#product_id").val() + "?agent_id=" + agent_id + "&num=" + $("#qty").val();
    window.location.href = url;
  }
</script>