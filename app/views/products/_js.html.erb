<script type="text/javascript">
  $(function(){
    // 锚点
    var thisId = window.location.hash;
    if (thisId != ''){
      $(thisId).click();
    }

    // change_cart_path(@product.id, agent_id: agent.id, num:)

    $("#xzgys").click(function(){
      $("a[href='#gysxx']").click(); //.focus();
      // $("#gyslb_div").focus();

      setTimeout('$("html,body").animate({scrollTop:$("#gysxx").offset().top},1000);', 300)
    });

    $.ajax({
      type: "get",
      dataType: "json",
      url: "/check_login",
      data: "pids=" + $("#product_id").val(),
      success: function(data) {
        if(data.success){
          $.each(data.rs, function(i, d){
            $("#bid_price_li").html(d.bid_price).show();
            $("#market_price_li").html(d.market_price).show();
          });
        }else{
          $("#login_tip").show();
        }
      }
    })

  });

  function add_to_cart(seller_id){
    // 根据项目和入围供应商的级别判断是否可以加入购物车
    if(!$.parseJSON($("#can_cart").val())){
      flash_dialog("该产品的供应商不是A类供应商，不能加入购物车，请选择其他产品！");
      return false;
    }
    var num = parseInt($("#qty").val());
    if ($.isBlank(num) || num < 1){
      num = 1
    }
    if ((num + 1) > 9999){
      num = 9999;
    }

    var url = "/cart/change/" + $("#product_id").val() + "-Department-" + seller_id + "?num=" + num;
    window.location.href = url;
  }
</script>
